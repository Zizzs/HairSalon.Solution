@using HairSalon.Models
@{
  Layout = "_Layout";
}

<div class="container">
    <h3>Hair Salon</h3>
    <h2>@Model["stylists"][0].GetName()</h2>
    <a class="deleteLink" href='/stylists/@Model["stylists"][0].GetId()/delete'>Delete this Stylist(And the Stylist's Clients)</a>
    <h3>Current Clients:</h3>
    @foreach(ClientClass client in @Model["clients"])
    {
        <p><a href="/stylists/clients/@client.GetId()">@client.GetName()</a></p>
    }
    <br>
    <a href="/stylists">Home Page</a>
</div>
