@using HairSalon.Models
@{
  Layout = "_Layout";
}

<div class="container">
    <h3>Hair Salon</h3>
    <p><a href="/stylists/new">Click here to add a stylist.</a></p>
    <p><a href="/stylists/clients/new">Click here to add a client.</a></p>
    <br>
    <hr>
    <br>
    <h3>Current Stylists:</h3>
    @foreach(StylistClass stylist in @Model)
    {
        <a href="/stylists/@stylist.GetId()">@stylist.GetName()</a>
    }
</div>
